<?xml version="1.0"?>
<!DOCTYPE ejb-jar
   PUBLIC "-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN"
   "http://java.sun.com/dtd/ejb-jar_2_0.dtd"
>

<ejb-jar>
   <enterprise-beans>
      <message-driven>
         <ejb-name>WorkflowEngine</ejb-name>
         <ejb-class>wf.server.controller.WorkflowEngine</ejb-class>
         <transaction-type>Container</transaction-type>
         <acknowledge-mode>AUTO_ACKNOWLEDGE</acknowledge-mode>
         <message-driven-destination>
            <destination-type>javax.jms.Queue</destination-type>
            <subscription-durability>Durable</subscription-durability>
         </message-driven-destination>
         <resource-ref>
            <res-ref-name>jms/QCF</res-ref-name>
            <res-type>javax.jms.QueueConnectionFactory</res-type>
            <res-auth>Container</res-auth>
         </resource-ref>
         <env-entry>
             <env-entry-name>authenticator</env-entry-name>
             <env-entry-type>java.lang.String</env-entry-type>
             <!-- The following value is customizable --> 
             <env-entry-value>wf.client.auth.XflowUserAuthenticator</env-entry-value>
             <description>Class name for user authentication</description>
         </env-entry>
      </message-driven>
   </enterprise-beans>
  <assembly-descriptor>
      <container-transaction>
      <method>
    <ejb-name>WorkflowEngine</ejb-name>
    <method-name>*</method-name>
        </method>
        <trans-attribute>Required</trans-attribute>
      </container-transaction>
  </assembly-descriptor>

</ejb-jar>
